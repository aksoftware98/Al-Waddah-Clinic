@page "/notfound"
@inject NavigationManager NavigationManager

@layout EmptyLayout

<MudGrid Class="d-flex align-center justify-center mud-width-full" style="height:100vh; width:100vw; background-image: url('https://th.bing.com/th/id/R.9c4bd3d23ff6e1dae23af5359fb5afaa?rik=Si1KMVJLqOQRdQ&pid=ImgRaw&r=0'); background-repeat: no-repeat; background-size: cover;">
    <MudItem xs="10" md="8" lg="8">
        <MudCard style="width: 100%; padding: 2.5rem;">
            <MudCardContent>
                <MudText Align="Align.Center" Typo="Typo.h3" Color="Color.Error"><b>Whoops, Wrong Address</b></MudText>
                <MudText Align="Align.Center" Typo="Typo.body1">
                    Looks like the page you're searching for doesn't exist or maybe <br />the author has changed the page link
                </MudText>
                <MudItem Class="d-flex justify-center mt-5">
                    <MudButton Class="justifiy-center" Variant="Variant.Filled" Color="Color.Error"
                               @onclick='( () => NavigationManager.NavigateTo("/") )'>
                        Go Back To Dashboard
                    </MudButton>
                </MudItem>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>