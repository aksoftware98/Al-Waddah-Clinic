@page "/notfound"
@inject NavigationManager NavigationManager

@layout EmptyLayout

<MudGrid Justify="Justify.Center" Class="page-style">
    <MudItem xs="11" md="6" lg="6">
        <MudCard style="width: 100%; padding: 2rem;">
            <MudCardContent>
                <MudText Align="Align.Center" Typo="Typo.h3" Color="Color.Error"><b>Whoops, Wrong Address</b></MudText>
                <MudText Align="Align.Center" Typo="Typo.body1">
                    Looks like the page you're searching for doesn't exist or maybe <br />the author has changed the page link
                </MudText>
                <MudItem Class="d-flex justify-center mt-3">
                    <MudButton Class="justifiy-center" Variant="Variant.Filled" Color="Color.Error"
                               @onclick='( () => NavigationManager.NavigateTo("/") )'>
                        Dashboard
                    </MudButton>
                </MudItem>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>

<style>
    .page-style{
        height: 100vh;
        place-items: center;
        background-image: linear-gradient(to right, @(Colors.Red.Lighten1), @(Colors.Blue.Darken3));
    }
</style>