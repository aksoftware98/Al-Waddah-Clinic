@page "/unauthorized"
@inject NavigationManager NavigationManager
@layout EmptyLayout

<MudGrid Class="d-flex align-center justify-center mud-width-full" style="height:100vh; width:100vw; background-image: url('https://th.bing.com/th/id/R.9c4bd3d23ff6e1dae23af5359fb5afaa?rik=Si1KMVJLqOQRdQ&pid=ImgRaw&r=0'); background-repeat: no-repeat; background-size: cover;">
    <MudItem xs="10" md="8" lg="6">
        <MudCard style="width: 50%; padding: 2.5rem;">
            <MudCardContent>
                <MudText Align="Align.Center" Typo="Typo.h1" Color="Color.Primary"><b>Oh No!</b></MudText>
                <MudText Align="Align.Center" Typo="Typo.body1">Looks like the author of this page has restricited the
                    access to it, please
                    login if you've not done already, that may fix the problem</MudText>
                <MudItem Class="d-flex justify-center mt-5">
                    <MudButton Class="justifiy-center" Variant="Variant.Filled" Color="Color.Primary"
                    @onclick='( () => NavigationManager.NavigateTo("/user/login") )'>Go To
                        Login</MudButton>
                </MudItem>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>